
<div class="question-nicer">
  <h3> <%= params[:answer] %></h3>
  <p>-You</p>
</div>

<hr>

<div class="answer-nicer">
  <% if params[:answer] == 'I am going to work' %>
  <h3>Great!</h3>
  <% elsif params[:answer].include?('?') %>
  <h3>Silly question, get dressed and go to work!</h3>
  <% else %>
  <h3>I don't care, get dressed and go to work!</h3>
  <% end %>
  <p>-Your coach</p>
</div>

<div class="btn-center">
  <%= link_to "Ask a new question", ask_path, class: "btn btn-info" %>
</div>



